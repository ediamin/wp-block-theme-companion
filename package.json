{
	"name": "wp-block-theme-companion",
	"displayName": "WP Block Theme Companion",
	"description": "A VSCode extension for WordPress Block Theme development.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.81.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:css",
		"onLanguage:html",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onLanguage:less",
		"onLanguage:markdown",
		"onLanguage:php",
		"onLanguage:plaintext",
		"onLanguage:scss",
		"onLanguage:sass",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:vue",
		"onLanguage:vue-html"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "wpBlockThemeCompanion.useThisThemeJson",
				"title": "WP Block Theme Companion: Use this theme.json"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "wpBlockThemeCompanion.useThisThemeJson",
					"when": "resourceFilename === theme.json"
				}
			],
			"explorer/context": [
				{
					"command": "wpBlockThemeCompanion.useThisThemeJson",
					"when": "resourceFilename === theme.json"
				}
			]
		},
		"configuration": [
			{
				"title": "WP Block Theme Companion",
				"properties": {
					"wpBlockThemeCompanion.themeJsonPath": {
						"type": "string",
						"default": "",
						"description": "Set the theme.json file path relative to the project root in the workspace's settings.json"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@types/vscode": "^1.81.0",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vscode/test-electron": "^2.3.2",
		"@wordpress/eslint-plugin": "^16.0.0",
		"@wordpress/prettier-config": "^2.25.0",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"json-schema-to-typescript": "^13.1.1",
		"mocha": "^10.2.0",
		"prettier": "npm:wp-prettier@^3.0.3",
		"ts-loader": "^9.4.3",
		"typescript": "^5.1.3",
		"webpack": "^5.85.0",
		"webpack-cli": "^5.1.1"
	}
}
